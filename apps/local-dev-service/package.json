{
  "name": "@liminal/local-dev-service",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:start": "pm2 start ecosystem.config.cjs",
    "dev:stop": "pm2 delete local-dev-service 2>/dev/null || true",
    "dev:restart": "npm run dev:stop && npm run dev:start",
    "dev:logs": "pm2 logs local-dev-service --lines 100 --nostream",
    "dev:logs:stream": "pm2 logs local-dev-service --lines 20",
    "dev:status": "pm2 show local-dev-service",
    "dev:env": "pm2 env local-dev-service | grep -E '(DEV_USER_EMAIL|WORKOS_CLIENT_ID)' | head -10",
    "start": "tsx src/server.ts",
    "typecheck": "tsc --noEmit",
    "consult:v0": "curl -s -X POST http://127.0.0.1:8081/consult/v0 -H 'Content-Type: application/json' -d '{\"prompt\": \"'\"$*\"'\"}' | jq -r '.response'",
    "consult:perplexity:pro": "curl -s -X POST http://127.0.0.1:8081/consult/perplexity/sonar-pro -H 'Content-Type: application/json' -d '{\"query\": \"'\"$*\"'\"}' | jq -r '.response'",
    "consult:perplexity:deep": "curl -s -X POST http://127.0.0.1:8081/consult/perplexity/sonar-deep-research -H 'Content-Type: application/json' -d \"{\\\"query\\\": \\\"$*\\\"}\" | jq",
    "deep-research:status": "curl -s http://127.0.0.1:8081/deep-research/response/$1 | jq",
    "consult:o3-pro": "curl -s -X POST http://127.0.0.1:8081/consult/o3-pro -H 'Content-Type: application/json' -d \"{\\\"prompt\\\": \\\"$*\\\"}\" | jq",
    "o3-pro:status": "curl -s http://127.0.0.1:8081/o3-pro/response/$1 | jq"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@workos-inc/node": "^7.47.0",
    "dotenv": "^17.0.1",
    "fastify": "^5.3.0",
    "jwt-decode": "^4.0.0",
    "redis": "^4.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
