{
  "name": "domain-server-nest",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --no-file-parallelism",
    "test:ui": "vitest --ui",
    "test:integration": "playwright test --config=../../playwright.config.integration.ts --project=integration-domain",
    "agent": "./ai-agents/scripts/agent",
    "agent:ba": "./ai-agents/scripts/agent ba",
    "agent:tech-reviewer": "./ai-agents/scripts/agent tech-lead-reviewer",
    "agent:tech-orchestrator": "./ai-agents/scripts/agent tech-lead-orchestrator",
    "agent:dev": "./ai-agents/scripts/batch developer",
    "agent:qa": "./ai-agents/scripts/batch qa",
    "agent:setup": "./ai-agents/scripts/setup",
    "agent:handoff": "./ai-agents/scripts/handoff",
    "dev:restart": "npm run dev:stop && npm run build && npm run start:dev > nest-server.log 2>&1 &",
    "dev:stop": "lsof -ti:8766 | xargs kill -9 2>/dev/null || true",
    "dev:health": "curl -s http://localhost:8766/health | jq || echo 'Server not responding'",
    "dev:logs": "tail -f nest-server.log",
    "dev:rebuild": "npm run build && npm run dev:restart"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.22",
    "@fastify/static": "^8.2.0",
    "@liminal-chat/shared-types": "workspace:^",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-fastify": "^11.1.2",
    "@nestjs/swagger": "^11.2.0",
    "ai": "^4.3.16",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "fastify": "^5.3.3",
    "nanoid": "^5.1.5",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.2.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "express": "^5.1.0",
    "globals": "^16.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "unplugin-swc": "^1.5.1",
    "vitest": "^3.2.3"
  }
}
